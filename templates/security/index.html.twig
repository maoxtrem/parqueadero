{% extends 'base.html.twig' %}

{% block title %}
	{% if form_login %}
		iniciar sesion
	{% else %}
		registrarse
	{% endif %}
{% endblock %}


{% block content %}
	<div class="container">
		<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
						<div class="card mb-3">
							<div class="card-body">
								<div class="pt-4 pb-2">
									<h5 class="card-title text-center pb-0 fs-4">
										{% if form_login %}iniciar sesion{% else %}registrarse
										{% endif %}
									</h5>
								</div>
								<form class="row g-3" method="post">
									<div class="col-12">
										<label for="username" class="form-label">Username</label>
										<div class="input-group has-validation">
											<input type="text" name="_username" class="form-control" id="username" required>
										</div>
									</div>

									<div class="col-12">
										<label for="password" class="form-label">Password</label>
										<input type="password" name="_password" class="form-control" id="password" required>
									</div>
									{% if form_login %}
										<div class="col-12">
											<div class="form-check">
												<input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me" checked>
												<label class="form-check-label" for="rememberMe">Remember me</label>
											</div>
										</div>
									{% endif %}
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<div class="col-12">
										<button class="btn btn-primary w-100" type="submit">
											{% if form_login %}iniciar sesion{% else %}registrarse
											{% endif %}
										</button>

									</div>
									<div class="col-12">
										<p class="small mb-0">
											{% if form_login %}
												no tienes una cuenta?<a href="{{path('app_register')}}">registrate</a>
											{% else %}
												ya tienes una cuenta?<a href="{{path('app_login')}}">loguearce</a>
											{% endif %}


										</p>
									</div>
									{% if error %}
										<div class="col-12">
											<div class="alert alert-danger">{{ error.message }}</div>
										</div>
									{% endif %}
								</form>

							</div>
						</div>

					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
